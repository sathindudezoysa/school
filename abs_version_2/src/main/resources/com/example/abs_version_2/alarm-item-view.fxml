<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.abs_version_2.AlarmItemController"
      spacing="15" alignment="CENTER_LEFT"
      style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 4; -fx-padding: 10;">

    <!-- Time -->
    <VBox alignment="CENTER_LEFT" maxWidth="Infinity">
        <Label fx:id="nameLabel" text="Alarm"
               style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
        <Label fx:id="timeLabel" text="8:30 AM"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="bellFile" text="" maxWidth="Infinity"
               style="-fx-text-fill: #6c757d; -fx-font-size: 10px;"/>

    </VBox>

    <!-- Spacer -->
    <Pane HBox.hgrow="ALWAYS"/>

    <!-- Toggle -->
    <ToggleButton fx:id="toggleButton" onMouseClicked="#toggleAlarm" text="ON"
                  style="-fx-padding: 3 10; -fx-font-size: 12px;"/>

    <!-- Delete Button -->
    <Button fx:id="deleteButton" onMouseClicked="#deleteAlarm" text="Ã—"
            style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px;
                   -fx-font-weight: bold; -fx-min-width: 25; -fx-min-height: 25; -fx-padding: 0;"/>

</HBox>